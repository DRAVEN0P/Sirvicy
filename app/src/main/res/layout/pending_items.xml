<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.cardview.widget.CardView
        android:layout_width="350dp"
        android:layout_height="120dp"
        app:cardCornerRadius="22dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="89dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/imgmac"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_marginStart="15dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:srcCompat="@tools:sample/avatars" />

            <TextView
                android:id="@+id/textalot"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Alotted to: "
                app:layout_constraintStart_toEndOf="@+id/imgmac"
                app:layout_constraintTop_toBottomOf="@+id/texttype" />

            <TextView
                android:id="@+id/texttype"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Vehicle Type:"
                app:layout_constraintStart_toEndOf="@+id/imgmac"
                app:layout_constraintTop_toTopOf="@+id/imgmac" />

            <TextView
                android:id="@+id/textvenue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Venue"
                app:layout_constraintStart_toEndOf="@+id/imgmac"
                app:layout_constraintTop_toBottomOf="@+id/textalot" />

            <TextView
                android:id="@+id/textcont"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Contact Details"
                app:layout_constraintStart_toEndOf="@+id/imgmac"
                app:layout_constraintTop_toBottomOf="@+id/textvenue" />

            <TextView
                android:id="@+id/textView14"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="40dp"
                android:layout_marginBottom="20dp"
                android:text="Start"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>